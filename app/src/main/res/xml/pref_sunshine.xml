<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_location_title"
        android:summary="@string/pref_location_summary"
        android:defaultValue="@string/pref_location_default"/>

    <ListPreference
        android:key="@string/pref_temp_unit_key"
        android:title="@string/pref_temp_unit_title"
        android:defaultValue="metric"
        android:entries="@array/units"
        android:entryValues="@array/unitValues"
        android:dialogTitle="@string/pref_temp_unit_dialog_title"
        android:summary="@string/pref_temp_unit_summary"/>

</PreferenceScreen>